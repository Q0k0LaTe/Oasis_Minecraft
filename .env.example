# ============================================
# 环境变量配置模板
# ============================================
# 复制此文件为 .env 并填入实际值
# cp .env.example .env

# ============================================
# AI API Keys (必需)
# ============================================
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# 邮件/Google服务配置 (必需)
# ============================================
RESEND_API_KEY=your_resend_api_key_here
MAIL_FROM=noreply@oasismod.com
MAIL_FROM_NAME=Minecraft Mod Generator
GOOGLE_CLIENT_ID=你的客户端ID.apps.googleusercontent.com

# ============================================
# 数据库配置
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=minecraft_mod_generator
DB_USER=oasis
DB_PASSWORD=oasis123

# ============================================
# Redis 配置
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============================================
# Minecraft/Fabric 配置 (可选，有默认值)
# ============================================
MINECRAFT_VERSION=1.21.5
FABRIC_LOADER_VERSION=0.16.13
# FABRIC_API_VERSION=0.128.2+1.21.5  # 会根据 MINECRAFT_VERSION 自动选择
# YARN_MAPPINGS=1.21.5+build.1
JAVA_VERSION=21
RESOURCE_PACK_FORMAT=34

# ============================================
# 验证码配置 (可选，有默认值)
# ============================================
# VERIFICATION_CODE_EXPIRE_MINUTES=10
# VERIFICATION_CODE_LENGTH=6